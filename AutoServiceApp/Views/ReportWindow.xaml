<Window x:Class="AutoServiceApp.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Отчеты по заявкам" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <ComboBox x:Name="ReportTypeComboBox" Width="200" Margin="0,0,10,0">
                <ComboBoxItem Content="Статистика по статусам"/>
                <ComboBoxItem Content="Финансовый отчет"/>
                <ComboBoxItem Content="Отчет по механикам"/>
            </ComboBox>
            <Button Content="Сформировать" Click="GenerateReport_Click" Width="100"/>
            <Button Content="Экспорт" Click="ExportReport_Click" Margin="10,0,0,0" Width="80"/>
        </StackPanel>

        <DataGrid x:Name="ReportDataGrid" Grid.Row="1" AutoGenerateColumns="True"
                  IsReadOnly="True" AlternatingRowBackground="LightGray"/>

        <TextBlock x:Name="SummaryText" Grid.Row="2" Margin="0,10,0,0" 
                   FontWeight="Bold" TextWrapping="Wrap"/>
    </Grid>
</Window>