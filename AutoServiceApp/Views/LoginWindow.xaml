<Window x:Class="AutoServiceApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="250" Width="400"
        x:Name="LoginWindowControl">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Логин:" Grid.Row="0"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="0" Margin="60,0,0,10" KeyDown="UsernameTextBox_KeyDown"/>

        <TextBlock Text="Пароль:" Grid.Row="1"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Margin="60,0,0,10" KeyDown="PasswordBox_KeyDown"/>

        <TextBlock x:Name="ErrorText" Foreground="Red" Grid.Row="2" Margin="0,10"/>

        <Button Content="Войти" Click="Login_Click" Grid.Row="3" Width="80" HorizontalAlignment="Right"/>
    </Grid>
</Window>